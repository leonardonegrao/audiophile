{
  "name": "@audiophile/ui",
  "version": "0.1.0",
  "private": true,
  "main": "src/App.tsx",
  "dependencies": {
    "@react-theming/storybook-addon": "^1.1.1",
    "@storybook/preset-create-react-app": "^3.2.0",
    "eslint": "^7.32.0",
    "react": "17.0.2",
    "react-dom": "17.0.2",
    "react-scripts": "4.0.3",
    "styled-components": "5.3.1",
    "typescript": "^4.1.2"
  },
  "scripts": {
    "test": "react-scripts test --watchAll=false",
    "test:watch": "react-scripts test",
    "start": "start-storybook -p 6006",
    "build": "build-storybook",
    "lint": "eslint ."
  },
  "eslintConfig": {
    "extends": [
      "react-app",
      "react-app/jest"
    ],
    "rules": {
      "indent": [
        "error",
        2
      ],
      "no-console": [
        "warn",
        {
          "allow": [
            "warn",
            "error"
          ]
        }
      ],
      "semi": [
        "error",
        "always"
      ],
      "quotes": [
        "error",
        "single"
      ]
    }
  }
}
